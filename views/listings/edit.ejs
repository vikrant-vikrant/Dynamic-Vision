<% layout('layouts/boilerPlate') -%>
<link rel="stylesheet" href="/css/style.css" />
<body>
  <div class="main">
    <div class="page1">
      <%- include('../includes/navbar')%>
      <h1>Edit Student</h1>
      <form action="/student/<%= student.id %>/edit?_method=PUT " method="post">
        <label for="name">name</label>
        <input
          type="text"
          id="name"
          name="name"
          value="<%= student.name %>"
        /><br />
        <label for="grade">grade</label>
        <input
          type="text"
          id="grade"
          name="grade"
          value="<%= student.grade %>"
        /><br />
        <label for="parent">parent</label>
        <input
          type="text"
          id="parent"
          name="parent"
          value="<%= student.parent %>"
        /><br />
        <label for="contact">contact</label>
        <input
          type="number"
          id="contact"
          name="contact"
          value="<%= student.contact %>"
        /><br />
        <label for="phone">phone</label>
        <input
          type="number"
          id="phone"
          name="phone"
          value="<%= student.phone %>"
        /><br />
        <label for="note">note</label>
        <input
          type="text"
          id="note"
          name="note"
          value="<%= student.note %>"
        /><br />
        <label for="joiningDate">joiningDate</label>
        <input
          type="Date"
          id="joiningDate"
          name="joiningDate"
          data-date-format="DD MMMM YYYY"
          value="<%= formattedDate %>"
        /><br />
        <label for="fees">Fees</label>
        <input
          type="number"
          id="fees"
          name="fees"
          value="<%= student.fees %>"
        /><br />
        <button>Make Changes</button>
      </form>
    </div>
  </div>
</body>
